<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="state_area_view" model="ir.ui.view">
            <field name="name">state_area_view.form</field>
            <field name="model">res.country.state</field>
            <field name="inherit_id" ref="base.view_country_state_form"/>
            <field name="arch" type="xml">
                <field name="country_id" position="after">
                    <field name="state_area" attrs="{'required':'1'}"/>
                </field>
            </field>
        </record>

        <record id="state_area_tree" model="ir.ui.view">
            <field name="name">state_area_view.tree</field>
            <field name="model">res.country.state</field>
            <field name="inherit_id" ref="base.view_country_state_tree"/>
            <field name="arch" type="xml">
                <field name="country_id" position="after">
                    <field name="state_area" attrs="{'required':'1'}"/>
                </field>
            </field>
        </record>
    </data>
</openerp>
